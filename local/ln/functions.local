# Linux Networking Functions {{{

# Get all of the IPs behind an IPVS VIP along with their stats
ipvs-get-vip() {
	local vip="${1}"
	ipvsadm -l -n | awk -v vip="${vip}" \
		'BEGIN{a=0}; $0 ~ vip {a=1; print $0; next}; a==1 {if($0 ~ /TCP/) {exit}; print $0};'
}
