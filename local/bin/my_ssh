#!/bin/bash

main ()
{
	local -i RETVAL=0
	local HOST=${1:-not_set}

	[[ "${HOST}" == "not_set" ]] && exit 1

	echo "Checking Host Status..."
	if [[ "${HOST}" == *@* ]]; then
		is_node_up "${HOST##*@}"
	else
		is_node_up "${HOST}"
	fi

	if [[ ("${HOST}" != *@* || ${HOST%@*} == $(whoami)) && "root" != $(whoami) ]]; then
		echo "Setting Up Remove Env..."
		setup_remote_env ${HOST}
	fi
	\ssh -Aq ${HOST} || RETVAL=${?}

	printf "\nSSH Exit Code: %d\n\n" ${RETVAL}
	printf "\n%s\n\n" "$(date)"

	return ${RETVAL}
}

time while : ; do
	main ${1} && break
	sleep 15
done
